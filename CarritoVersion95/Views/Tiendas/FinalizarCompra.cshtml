@model CarritoVersion95.Models.Pedido

@{
    ViewData["Title"] = "FinalizarCompra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">Compra Finalizada</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero de pedido:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPedido)
        </dd>

    </dl>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th>
                Producto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>

            </tr>
        }
    </tbody>
</table>




<div>
    <hr />
    <d1 class="row">
        <dt class="col-sm-2">
           Precio total: $
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioTotal)
        </dd>
    </d1>
</div>