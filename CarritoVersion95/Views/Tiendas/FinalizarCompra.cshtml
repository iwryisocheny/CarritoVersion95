@model CarritoVersion95.Models.Pedido

@{
    ViewData["Title"] = "FinalizarCompra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Compra Finalizada</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioTotal)
        </dd>
    </dl>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th>
                IdProducto
            </th>
            <th>
               IdTienda
            </th>
            <th>
               NombreProducto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTienda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
                
            </tr>
        }
    </tbody>
</table>
