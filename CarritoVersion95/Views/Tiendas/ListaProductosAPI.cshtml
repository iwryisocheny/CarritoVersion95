
@{
    ViewData["Title"] = "ListaProductosAPI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Todos los productos</h1>



@model List<Producto>



@if (Model != null && Model.Count() > 0)
{



    @foreach (var producto in Model)
    {

<div class="card border-secondary mb-3 mr-3 d-inline-block">

    @{
        if (producto.Imagen1 != null)
        {
            string imageBase64Data = Convert.ToBase64String(producto.Imagen1);
            string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);

           

            <div style="background-image:url(@imageDataURL); background-repeat:no-repeat; background-position: center center;background-size:cover; width:17.9rem;height:18rem;" ></div>
        }
      }

    <div class="card-header">
        al @Html.DisplayFor(m => producto.NombreProducto)
    </div>


    <div class="card-body">


        @*<div class="card-group">*@
        <div class="d-inline-block text-truncate" style="max-width: 16rem;">
            @Html.DisplayFor(m => producto.DescripcionProducto)
        </div>

        <div class="card-group font-weight-bold">
           $ @Html.DisplayFor(m => producto.PrecioProducto)
        </div>

    </div>


    <div class="card-footer">






        <partial name="AgregarACarrito" model='new Item { IdProducto = producto.IdProducto }'>





    </div>



</div>

    }




}
else
{
    <div>No hay productos</div>
}