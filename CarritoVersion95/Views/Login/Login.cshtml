@model Usuario
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row justify-content-center align-items-center" style="height:50vh">
        <div class="col-4">
            <div class="card">
                <div class="card-header text-center">Login</div>
                <div class="card-body">
                    <form method="post" asp-action="Login" asp-controller="Login">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="email" asp-for="email" required />
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="contraseña" asp-for="contrasenia" required />
                        </div>
                        <input type="submit" value="Login" class="btn btn-primary" />

                    </form>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        No tenés cuenta?
                        <a class="card-link" asp-action="Registrarse" asp-controller="Login">Registrate</a>
                    </li>
                    </ul>


            </div>
        </div>
    </div>
</div>
